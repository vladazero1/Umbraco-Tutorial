@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.LoginPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Clean.Site.ViewModel;

@model ComposedPageViewModel<LoginPage, LoginPageViewModel>
@{
	Layout = "Master.cshtml";
}

<section id="main">
    <div class="container">
        <div id="content">
            @if (Model.ViewModel.isSignedResult)
            {
                @(await Component.InvokeAsync("AuthenicatedComponent"))
            }
            else
            {
                @(await Component.InvokeAsync("AnonymousComponent"))
            }
        </div>
    </div>
</section>